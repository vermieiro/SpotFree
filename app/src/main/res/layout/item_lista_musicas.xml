<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/itemListaMusicaFoto"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:id="@+id/itemListaMusicasNomeMusica"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemListaMusicasNomeMusica"
        android:textSize="10dp"
        android:id="@+id/itemListaMusicasArtista"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_toRightOf="@+id/itemListaMusicasArtista"
        android:layout_below="@id/itemListaMusicasNomeMusica"
        android:textSize="10dp"
        android:id="@+id/itemListaMusicasDuracao"/>
    </RelativeLayout>

</LinearLayout>
